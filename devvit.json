{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "dev-insights",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "inline": true
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "forms": {
    "postTitleForm": "/internal/form/post-title-submit"
  },
  "menu": {
    "items": [
      {
        "label": "Fetch previous user content",
        "description": "dev-insights",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/fetch-user-content"
      },
      {
        "label": "Create a new post",
        "description": "dev-insights",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Pin to Insights",
        "description": "dev-insights",
        "location": "post",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/add-manual-post"
      },
      {
        "label": "Pin to Insights",
        "description": "dev-insights",
        "location": "comment",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/add-manual-comment"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install",
    "onAppUpgrade": "/internal/on-app-upgrade",
    "onCommentCreate": "/internal/on-comment-create",
    "onPostCreate": "/internal/on-post-create",
    "onPostDelete": "/internal/on-post-delete",
    "onPostUpdate": "/internal/on-post-update",
    "onCommentDelete": "/internal/on-comment-delete",
    "onCommentUpdate": "/internal/on-comment-update",
    "onPostFlairUpdate": "/internal/on-post-flair-update"
  },
  "scheduler": {
    "tasks": {
      "log-analytics-cron": {
        "endpoint": "/internal/scheduler/log-analytics",
        "cron": "*/15 * * * *"
      }
    }
  },
  "dev": {
    "subreddit": "dev_insights_dev"

  },
    "permissions": {
    "redis": true
  },
  "settings": {
    "global": {
      "apiKey": {
        "type": "string",
        "label": "API Key",
        "isSecret": true
      }

    }, 
      "subreddit": {
        "subredditUsers": {
          "type": "string",
          "label": "Match Users",
          "helpText": "Enter users to match, separate users with a comma. (e.g. PlexversalHD, u/dev-insights, u/spez)",
          "placeholder": "Be specific. (Optional match)",
          "validationEndpoint": "/internal/settings/validate-users"
        },
        "subredditFlairText": {
          "type": "string",
          "label": "Match User Flair Text",
          "helpText": "Enter flair text to match, separate flair text with a comma. (e.g. Dev, Community manager, :YT: YouTuber, EA, Respawn)",
          "placeholder": "Be specific. (Optional match)",
          "validationEndpoint": "/internal/settings/validate-flairtext"
        },
         "subredditFlairCssclass": {
          "type": "string",
          "label": "Match Flair CSS",
          "helpText": "Enter flair text shown in subreddit flair settings, separate flair text with a comma. (e.g. dev, community-manager, ea, respawn)",
          "placeholder": "Be specific. (Optional match)",
          "validationEndpoint": "/internal/settings/validate-cssclass"
        },
        "subredditPostFlairText": {
          "type": "string",
          "label": "Match Post Flair Text or ID",
          "helpText": "STRONGLY advise they are mod only post flairs, separate flair text with a comma. (e.g. Official News, Updates, 12ff3a4-66a7ff77-44f4f)",
          "placeholder": "Be specific. (Optional match)",
          "validationEndpoint": "/internal/settings/validate-flairtext"
        },
        "postTitle": {
          "type": "string",
          "label": "Default Post Title",
          "defaultValue": "Game Announcements",
          "helpText": "Title used on all post names (you can make custom one in post create menu action)",
          "placeholder": "Max Length 300 characters.",
          "validationEndpoint": "/internal/settings/validate-posttitle"
        },
        "postsButtonName": {
          "type": "string",
          "label": "Posts Tab Button Name",
          "defaultValue": "Announcements",
          "helpText": "Custom name for the posts tab button",
          "placeholder": "Max Length 30 characters.",
          "validationEndpoint": "/internal/settings/validate-buttonname"
        },
        "commentsButtonName": {
          "type": "string",
          "label": "Comments Tab Button Name",
          "defaultValue": "Official Replies",
          "helpText": "Custom name for the comments tab button",
          "placeholder": "Max Length 30 characters.",
          "validationEndpoint": "/internal/settings/validate-buttonname"
        },
        "bottomSubtitle": {
          "type": "string",
          "label": "Bottom Subtitle",
          "defaultValue": "Recent Announcements",
          "helpText": "Custom subtitle text for the bottom of the app. Can be plain text (max 30 chars) or a markdown link [text](url) where text is max 30 chars and url is max 1000 chars. Only *.reddit.com, x.com, or twitter.com domains allowed.",
          "placeholder": "e.g. 'Recent Announcements' or '[Visit](https://reddit.com/r/example)'",
          "validationEndpoint": "/internal/settings/validate-bottomsubtitle"
        },
        "disableComments": {
          "type": "boolean",
          "label": "Disable Comments",
          "defaultValue": false,
          "helpText": "Disable viewing comments Button in the App post (i.e. If you only want to pin posts)"
        }

      }
  }
}
