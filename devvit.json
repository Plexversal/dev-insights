{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "dev-insights",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "inline": true
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "dev-insights",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install",
    "onCommentCreate": "/internal/on-comment-create"
  },
  "dev": {
    "subreddit": "dev_insights_dev"

  },
    "permissions": {
    "redis": true
  }
}
